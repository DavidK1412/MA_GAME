{
  "database": {
    "PGHOST": "localhost",
    "PGPORT": 5432,
    "PGDATABASE": "frog_game",
    "PGUSER": "postgres",
    "PGPASSWORD": "password"
  },
  "api": {
    "title": "Frog Game API",
    "version": "1.0.0",
    "description": "API para el juego de ranas con sistema de beliefs adaptativo",
    "host": "0.0.0.0",
    "port": 8000
  },
  "game": {
    "max_tries": 20,
    "time_limit": 300,
    "decision_interval": 3
  },
  "belief_system": {
    "update_interval": 5,
    "threshold": 0.5
  },
  "beliefs": {
    "E": {
      "Description": "Cantidad de errores del jugador",
      "Endpoint": "${E_EP}"
    },
    "B": {
      "Description": "Buclicidad",
      "Endpoint": "${B_EP}"
    },
    "IP": {
      "Description": "Intentos por partida",
      "Endpoint": "${IP_EP}"
    },
    "R": {
      "Description": "Ramificaci√≥n",
      "Endpoint": "${R_EP}"
    },
    "CE": {
      "Description": "Conocimiento de las reglas",
      "Endpoint": "${CE_EP}"
    },
    "TPM": {
      "Description": "Tiempo por movimiento",
      "Endpoint": "${TPM_EP}"
    },
    "TP": {
      "Description": "Tiempo promedio",
      "Endpoint": "${TP_EP}"
    }
  },
  "agents": {
    "Feedback": {
      "Description": "Agente encargado de retroalimentar al jugador",
      "Equation": "min(1, (E*2 + B*3)/12)"
    },
    "Advice": {
      "Description": "Agente encargado de dar consejos al jugador",
      "Equation": "min(1, (IP + R*2)/18)"
    },
    "Explain": {
      "Description": "Agente encargado de explicar al jugador",
      "Equation": "min(1, (1 - CE + E*2)/6)"
    },
    "Demonstrate": {
      "Description": "Agente encargado de demostrar al jugador",
      "Equation": "min(1, (TPM/25 + (10-A)/12)/2)"
    },
    "Ask": {
      "Description": "Agente encargado de preguntar al jugador",
      "Equation": "min(1, (B*3 + TP/20)/4)"
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/frog_game.log",
    "max_bytes": 10485760,
    "backup_count": 5
  }
}
